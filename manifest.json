{
    "manifest_version": 3,
    "name": "Web Research Assistant",
    "version": "1.0",
    "description": "Research assistant that crawls and processes web content",
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}